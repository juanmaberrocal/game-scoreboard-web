{
  "name": "game_scoreboard_web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@svgr/cli": "^4.3.3",
    "apexcharts": "^3.10.1",
    "autoprefixer": "^9.7.1",
    "axios": "^0.21.1",
    "formik": "^2.0.3",
    "moment": "^2.24.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-apexcharts": "^1.3.3",
    "react-bootstrap": "^1.0.0-beta.14",
    "react-dom": "^16.11.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "tailwindcss": "^1.1.3",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:css start:react",
    "build": "npm-run-all build:css build:react",
    "debug": "npm-run-all build:css build:react:debug",
    "build:css": "postcss src/assets/styles/tailwind.css -o src/index.css",
    "watch:css": "postcss src/assets/styles/tailwind.css -o src/index.css -w",
    "start:react": "react-scripts start",
    "build:react": "react-scripts build",
    "build:react:debug": "react-scripts build -- --profile",
    "build:svgr": "svgr -d src/components/Icons/ src/assets/icons/",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
